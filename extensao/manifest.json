{
    "manifest_version": 3,
    "name": "Anti-Phishing Detector",
    "version": "1.0",
    "description": "Bloqueia sites maliciosos e protege contra phishing.",
    "permissions": ["webRequest", "webRequestBlocking", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}
